<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Native.MainPage"
             xmlns:controls="clr-namespace:Native.Controls">

    <ContentPage.BindingContext>
        <local:MainViewModel
            xmlns:local="clr-namespace:Native.ViewModels"/>
    </ContentPage.BindingContext>
    
    <ScrollView>
        <VerticalStackLayout
            Spacing="25"
            Padding="30,0"
            VerticalOptions="Center">

            <Image
                Source="appicon.png"
                HeightRequest="200"
                HorizontalOptions="Center" />

            <Label
                Text="Login first"
                FontSize="18"
                HorizontalOptions="Center" />

            <Button
                x:Name="LoginBtn"
                Text="Login"
                Clicked="OnLoginClicked"
                HorizontalOptions="Center" />

            <!-- Old Newsletters -->
            <ListView ItemsSource="{Binding Dates}"
                      ItemSelected="DateSelected">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <TextCell Text="{Binding StringFormat='{o}'}" />
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
