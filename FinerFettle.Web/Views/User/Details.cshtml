@model FinerFettle.Web.Models.User.User
@using Controllers
@using Extensions

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>User</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Email)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Email)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Progression)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Progression)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Equipment)
        </dt>
        <dd class="col-sm-10">
            @Model.Equipment.GetDisplayName()
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.RestDays)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.RestDays)
        </dd>
    </dl>
</div>
<div>
    <a asp-controller="@UserController.Name" asp-action="@nameof(UserController.Edit)" asp-route-email="@Model?.Email">Edit</a> |
    <a asp-controller="@UserController.Name" asp-action="@nameof(UserController.Delete)" asp-route-email="@Model?.Email">Unsubscribe</a>
</div>
