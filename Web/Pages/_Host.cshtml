@page "/test"
@namespace BlazorWeather.Server.Pages
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>A Workout a Day</title>
    <base href="~/" />
</head>
<body>
    @*param-InitialValue="true"*@
    <component type="typeof(App.Pages.Newsletter.NewsletterWrapper)" render-mode="Static" param-Email='"strengthening@test.aworkoutaday.com"' param-Token='"apples"' />
    <component type="typeof(App.AppMain)" render-mode="Server" />

    <div id="blazor-error-ui">
        <environment include="Staging,Production">
            An error has occurred. This application may no longer respond until reloaded.
        </environment>
        <environment include="Development">
            An unhandled exception has occurred. See browser dev tools for details.
        </environment>
        <a href="" class="reload">Reload</a>
        <a class="dismiss">🗙</a>
    </div>

    <script src="_framework/blazor.server.js"></script>
</body>
</html>