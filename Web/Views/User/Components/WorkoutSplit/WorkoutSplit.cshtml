@model ViewModels.User.WorkoutSplitViewModel
@using Core.Models.Exercise

<div class="alert alert-info" role="alert">
    <div class="mb-3">
        <h5>Workout Split</h5>
    </div>

    @foreach (var rotation in Model.CurrentAndUpcomingRotations.OrderBy(r => r.Id))
    {
        <div style="font-size:smaller;">
            <span>@rotation.ToUserString(includeDay: true)</span>
        </div>
    }
</div>


