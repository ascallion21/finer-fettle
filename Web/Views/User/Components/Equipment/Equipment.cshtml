@model ViewModels.User.EquipmentViewModel
@using Core.Models.Exercise

@if (!Model.UserHasEquipment)
{
    <div class="alert alert-danger" role="alert">
        <b>You don't have any equipment selected.</b>
        <hr>
        <small>The workouts are better with equipment. Consider investing in some dumbbells, resistance bands, or gymnastic rings and select what you have access to.</small>
    </div>
}
