@model ViewModels.User.DeloadViewModel
@using Models.Exercise

<div class="alert alert-info" role="alert">
    @if (Model.NeedsDeload)
    {
        <div>You're currently in a deload week.</div>
    }
    else
    {
        <div>You're next deload week will occur in @Model.TimeUntilDeload.TotalDays days.</div>
    }
    <div style="margin-top:1rem;"><small>Deloads are weeks of lower intensity workouts. Used to recover from soreness, fatigue, and inflammation by reducing the strain placed upon your body.</small></div>
</div>
