@model ViewModels.User.DeloadViewModel
@using Models.Exercise

<div class="alert alert-primary" role="alert">
    @if (Model.NeedsDeload)
    {
        <div>You are currently in a deload week.</div>
    }
    else
    {
        <div>Your next deload week will start in @Model.TimeUntilDeload.TotalDays days.</div>
    }
    <hr />
    <small>Deloads are weeks of lower intensity workouts. Used to recover from soreness, fatigue, and inflammation by reducing the strain placed upon your body.</small>
</div>
