@model PostrequisiteViewModel
@using Core.Models.Exercise
@using Data.Entities.User


@if (Model.VisiblePostrequisites.Any() || Model.InvisiblePostrequisites.Any())
{
    <details class="mt-4 mb-25">
        <summary class="mb-1 h5">
            Postrequisites
            <span class="float-end">@(Model.VisiblePostrequisites.GroupBy(vm => vm.Exercise).Count() + Model.InvisiblePostrequisites.GroupBy(vm => vm.Exercise).Count())</span>
        </summary>

        <component type="typeof(Lib.Pages.Shared.Exercise.ExerciseSection)" render-mode="Static" param-User="Model.UserNewsletter" param-Exercises='Model.VisiblePostrequisites' param-Theme='ExerciseTheme.Extra' param-Verbosity="Model.Verbosity" />
        <component type="typeof(Lib.Pages.Shared.Exercise.ExerciseSection)" render-mode="Static" param-User="Model.UserNewsletter" param-Exercises='Model.InvisiblePostrequisites' param-Theme='ExerciseTheme.Warmup' param-Verbosity="Model.Verbosity" />
    </details>
}
