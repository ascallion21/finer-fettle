<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Hybrid.LoginPage">

    <ScrollView>
        <VerticalStackLayout
            Spacing="25"
            Padding="30,0"
            VerticalOptions="Center">

            <Label
                Text="A Workout a Day"
                FontSize="32"
                HorizontalOptions="Center" />

            <Label
                Text="Create an account at https://aworkoutaday.com and get an app token from the user preferences page"
                FontSize="18"
                HorizontalOptions="Center" />

            <Entry x:Name="EmailEntry"
               Placeholder="Email"
               TextChanged="OnEmailEntryCompleted" />

            <Entry x:Name="TokenEntry"
               Placeholder="Token"
               TextChanged="OnTokenEntryCompleted" />

            <Button Text="Login"
                VerticalOptions="Center"
                HorizontalOptions="Center"
                Clicked="OnLoginClicked" />
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
