@using Core.Models.Exercise
@using Core.Models.Newsletter;
@using Core.Models.User;

@if (Model.Exercises != null && Model.Exercises.Any())
{
    var titleColor = Model.Theme switch
    {
        ExerciseTheme.Warmup => "palevioletred",
        ExerciseTheme.Main => "mediumpurple",
        ExerciseTheme.Cooldown => "lightskyblue",
        ExerciseTheme.Extra => "lightgreen",
        ExerciseTheme.Other => "lightsalmon",
        _ => "currentColor"
    };

    if (Model.Title != null) 
    {
        <h2 style="margin-bottom:0;margin-top:1em;color:@titleColor;font-size:revert;">@Model.Title</h2>
        @if (Model.Verbosity.HasFlag(Verbosity.Normal) && Model.Description != null)
        {
            <h6 style="margin-block:0;font-size:revert;">@Model.Description</h6>
        }
        <div style="margin-top:.2rem;display:flex;flex-flow:row wrap;gap:1ch;line-height:normal;">
            @foreach (var item in Model.Exercises)
            {
                <_Exercise Model="item" />
            }
        </div>
    }
    else 
    {
        if (Model.Verbosity.HasFlag(Verbosity.Debug))
        {
            foreach (var group in Model.Exercises.GroupBy(e => new { e.Exercise, e.ExerciseVariation.ExerciseType }).OrderBy(e => e.Key.Exercise.Name))
            {
                <h2 style="margin-bottom:0;margin-top:1em;color:@titleColor;font-size:revert;">@group.Key.Exercise.Name</h2>

                @* Make this easier to find on the page. *@
                <small>_@group.Key.Exercise.Name.Replace(" ", "_")_</small>

                <p style="margin-block:0;"><b>Type</b> - @group.Key.ExerciseType.GetSingleDisplayName(EnumExtensions.DisplayNameType.ShortName)</p>

                <p style="margin-block:0;"><b>Groups</b> - @group.Key.Exercise.Groups.GetDisplayName32()</p>
                <div style="margin-block:.1ex;font-size:x-small;color:darkred"><b>Unused</b>: @ExerciseGroup.All.UnsetFlag32(group.Key.Exercise.Groups).GetDisplayName32(EnumExtensions.DisplayNameType.ShortName)</div>

                <p style="margin-block:0;"><b>Proficiency</b> - @group.Key.Exercise.Proficiency</p>

                @if (group.Key.Exercise.Prerequisites?.Any() == true)
                {
                    <p style="margin-block:0;"><b>Prerequisites</b> - @String.Join(", ", group.Key.Exercise.Prerequisites.Select(e => e.PrerequisiteExercise.Name))</p>
                }

                @if (!string.IsNullOrWhiteSpace(group.Key.Exercise.Notes))
                {
                    <p style="margin-block:0;"><b>Notes</b> - @group.Key.Exercise.Notes</p>
                }

                <div style="margin-top:.2rem;display:flex;flex-flow:row wrap;gap:1ch;line-height:normal;">
                    @foreach (var item in group)
                    {
                        <_Exercise Model="item" />
                    }
                </div>
            }
        }
        else
        {
            foreach (var group in Model.Exercises.GroupBy(e => e.Exercise).OrderBy(e => e.Key.Name))
            {
                <h2 style="margin-bottom:0;margin-top:1em;color:@titleColor;font-size:revert;">@group.Key.Name</h2>

                <div style="margin-top:.2rem;display:flex;flex-flow:row wrap;gap:1ch;line-height:normal;">
                    @foreach (var item in group)
                    {
                        <_Exercise Model="item" />
                    }
                </div>
            }
        }
    }
}

@code {
    [Parameter, EditorRequired]
    [SupplyParameterFromQuery]
    public ViewModels.Exercise.ExerciseSectionViewModel Model { get; set; } = null!;
}